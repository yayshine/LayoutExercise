<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yayshine.layoutexercise.InstagramActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물"
        android:id="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        android:id="@+id/textView3"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정"
        android:id="@+id/button"
        android:layout_marginBottom="14dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yay Shin"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageView"
        android:layout_marginBottom="3sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="makes things"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@id/textView4"
        android:layout_marginBottom="3sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dreams and does"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@id/textView4" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn_1"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn_2"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/btn_1"
        android:layout_toEndOf="@+id/btn_1" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn_3"
        android:layout_alignTop="@+id/btn_2"
        android:layout_toRightOf="@+id/btn_2"
        android:layout_toEndOf="@+id/btn_2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn_4"
        android:layout_alignTop="@+id/btn_3"
        android:layout_toRightOf="@+id/btn_3"
        android:layout_toEndOf="@+id/btn_3" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_1">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                app:columnCount="3"
                android:id="@+id/grid_layout"
                android:layout_below="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView1"
                    app:layout_row="0"
                    app:layout_column="0"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView2"
                    app:layout_row="0"
                    app:layout_column="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView3"
                    app:layout_row="0"
                    app:layout_column="2"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView4"
                    app:layout_row="1"
                    app:layout_column="0"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView5"
                    app:layout_row="1"
                    app:layout_column="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView6"
                    app:layout_row="1"
                    app:layout_column="2"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView7"
                    app:layout_row="2"
                    app:layout_column="0"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView8"
                    app:layout_row="2"
                    app:layout_column="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:id="@+id/imageView9"
                    app:layout_row="2"
                    app:layout_column="2"
                    android:src="@mipmap/ic_launcher" />

            </android.support.v7.widget.GridLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>
